@model Lab_03.Models.Book

@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditBook</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Book</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <p class="control-label col-md-2">Tác giả</p>
            <div class="col-md-10">
                <input type="text" class="form-control" id="" value="@Model.Author" name="Author">
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Tên sách</p>
            <div class="col-md-10">
                <input type="text" class="form-control" id="" value="@Model.Title" name="Title">
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <p class="control-label col-md-2">Mô tả</p>
            <div class="col-md-10">
                <input type="text" class="form-control" id="" value="@Model.Description" name="Description">
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-2">Hình ảnh</p>
            <div class="col-md-10">
                <input type="text" class="form-control" id="" value="@Model.ImageCover" name="ImageCover">
                <img src="@Model.ImageCover" style="margin-top:15px" width="100" />
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Giá sách</p>
            <div class="col-md-10">
                <input type="text" class="form-control" id="" value="@Model.Price" name="Price">
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
